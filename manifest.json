{
  "manifest_version": 3,
  "name": "InboxAI",
  "description": "Your AI-powered Gmail assistant that can summarize, search, and cross-reference email and calendar data using OpenAI GPT-4o-mini.",
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://api.openai.com/*",
    "https://www.googleapis.com/*",
    "https://accounts.google.com/*",
    "https://mail.google.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "inject.js",
        "icon16.png",
        "icon32.png",
        "icon48.png",
        "icon128.png"
      ],
      "matches": ["https://mail.google.com/*"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "oauth2": {
    "client_id": "804439227169-ostm1dnt9o6fsebbo4v9846qikl2fqv3.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.email",
      "openid"
    ]
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
